<h1>Список клиентов</h1>

<table>
  <thead>
  <tr>
    <th>Имя</th>
    <th>Фамилия</th>
    <th>Телефон</th>
    <th>Email</th>
    <th>Действия</th>
  </tr>
  </thead>
  <tbody>
  <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.first_name %></td>
      <td><%= customer.last_name %></td>
      <td><%= customer.phone %></td>
      <td><%= customer.email %></td>
      <td>
        <%= link_to 'Показать', customer_path(customer),class: 'btn btn-show' %> |
        <%= link_to 'Редактировать', edit_customer_path(customer), class:'btn-edit'%> |
        <%= form_with(model: customer, method: :delete, local: true) do |form| %>
          <%= form.submit 'Удалить', class: 'delete-button', data: { confirm: 'Вы уверены, что хотите удалить этого клиента?' } %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Добавить нового клиента', new_customer_path, class: 'btn btn-add' %>
<%= link_to 'Назад на главную', root_path, class: 'btn btn-back' %>