<h1>Список клиентов</h1>

<table class="customer-details">
  <thead>
  <tr>
    <th>Имя</th>
    <th>Фамилия</th>
    <th>Телефон</th>
    <th>Email</th>
    <th>Действия</th>
  </tr>
  </thead>
  <tbody>
  <% @customers.each do |customer| %>
    <tr id="customer_<%= customer.id %>">
      <td><%= customer.first_name %></td>
      <td><%= customer.last_name %></td>
      <td><%= customer.phone %></td>
      <td><%= customer.email %></td>
      <td>
        <%= link_to 'Показать', customer_path(customer), class: 'btn-link' %> |
        <%= link_to 'Редактировать', edit_customer_path(customer), class: 'btn-link' %> |
        <%= link_to 'Удалить', customer_path(customer), method: :delete, class: 'btn-link', data: { confirm: 'Вы уверены, что хотите удалить этого клиента?' } %>
      </td>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<% if flash[:alert] %>
  <div class="error-message">
    <%= flash[:alert] %>
  </div>
<% end %>
<%= link_to 'Добавить нового клиента', new_customer_path, class: 'btn btn-add' %>
<%= link_to 'Назад на главную', root_path, class: 'btn btn-back' %>